<?xml version="1.0"?>
<config>
  <modules>
    <Veritrans_VtWebbca>
      <version>0.1.0</version>
    </Veritrans_VtWebbca>
  </modules>
  <global>
    <models>
      <vtwebbca>
        <class>Veritrans_Vtwebbca_Model</class>
      </vtwebbca>
    </models>
    <helpers>
      <vtwebbca>
        <class>Veritrans_Vtwebbca_Helper</class>
      </vtwebbca>
    </helpers>
    <blocks>
      <vtwebbca>
        <class>Veritrans_Vtwebbca_Block</class>
      </vtwebbca>
    </blocks>
    <adminhtml>
      <layout>
        <updates>
          <vtwebbca>
            <file>veritrans.xml</file>
          </vtwebbca>
        </updates>
      </layout>
    </adminhtml>
  </global>
  <default>
    <payment>
      <vtwebbca>
        <model>vtwebbca/standard</model>
        <active>0</active>
        <title>Credit card Bca</title>
        <sort_order>4</sort_order>
        <treshold>500000</treshold>
        <enable_3d_secure>true</enable_3d_secure>
      </vtwebbca>
    </payment>
  </default>
  <frontend>
    <routers>
      <vtwebbca>
        <use>standard</use>
        <args>
          <module>Veritrans_Vtwebbca</module>
          <frontName>vtwebbca</frontName>
        </args>
      </vtwebbca>
    </routers>
  </frontend>
  <adminhtml>
    <layout>
      <updates>
        <veritrans_vtwebbca>
          <file>veritrans.xml</file>
        </veritrans_vtwebbca>
      </updates>
    </layout>
  </adminhtml>
</config>
