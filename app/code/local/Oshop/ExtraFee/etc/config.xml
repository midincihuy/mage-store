<?xml version="1.0"?>
<config>
    <modules>
        <Oshop_ExtraFee>
            <version>1.0.6</version>
        </Oshop_ExtraFee>
    </modules>
    <global>
        <models>
            <oshop_extrafee>
                <class>Oshop_ExtraFee_Model</class>
                <resourceModel>oshop_extrafee_resource</resourceModel>
            </oshop_extrafee>
            <oshop_extrafee_resource>
                <class>Oshop_ExtraFee_Model_Resource</class>
            </oshop_extrafee_resource>
            <salesrule>
                <rewrite>
                    <validator>Oshop_ExtraFee_Model_SalesRule_Discount_Validator</validator>
                </rewrite>
            </salesrule>
        </models>
        <blocks>
            <oshop_extrafee>
                <class>Oshop_ExtraFee_Block</class>
            </oshop_extrafee>
        </blocks>
        <helpers>
            <oshop_extrafee>
                <class>Oshop_ExtraFee_Helper</class>
            </oshop_extrafee>
        </helpers>
        <sales>
            <quote>
                <totals>
                    <extra_fee_rule>
                        <class>oshop_extrafee/quote_address_total_fee_rule</class>
                        <after>discount</after>
                        <before>grand_total</before>
                    </extra_fee_rule>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <extra_fee_rule>
                        <class>oshop_extrafee/sales_order_invoice_total_fee_rule</class>
                        <after>discount</after>
                    </extra_fee_rule>
                </totals>
            </order_invoice>
        </sales>
        <pdf>
            <totals>
                <extra_fee_rule>
                    <title>Extra Rule Fee</title>
                    <source_field>extra_fee_rule_amount</source_field>
                    <title_source_field>extra_fee_rule_description</title_source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>300</sort_order>
                </extra_fee_rule>
            </totals>
        </pdf>
        <fieldsets>
            <sales_convert_quote_address>
                <base_extra_fee_rule_amount>
                    <to_order>*</to_order>
                </base_extra_fee_rule_amount>
                <extra_fee_rule_amount>
                    <to_order>*</to_order>
                </extra_fee_rule_amount>
                <extra_fee_rule_description>
                    <to_order>*</to_order>
                </extra_fee_rule_description>
            </sales_convert_quote_address>
            <sales_convert_order>
                <extra_fee_rule_description>
                    <to_invoice>*</to_invoice>
                </extra_fee_rule_description>
            </sales_convert_order>
        </fieldsets>
        <resources>
            <oshop_extrafee_setup>
                <setup>
                    <module>Oshop_ExtraFee</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
            </oshop_extrafee_setup>
        </resources>
        <events>
            <salesrule_rule_save_before>
                <observers>
                    <oshop_extrafee>
                        <class>oshop_extrafee/observer</class>
                        <method>beforeSaveSalesRuleModel</method>
                    </oshop_extrafee>
                </observers>
            </salesrule_rule_save_before>
            <adminhtml_block_salesrule_actions_prepareform>
                <observers>
                    <oshop_extrafee_prepare_form>
                        <class>oshop_extrafee/observer</class>
                        <method>prepareFormSalesRuleEdit</method>
                    </oshop_extrafee_prepare_form>
                </observers>
            </adminhtml_block_salesrule_actions_prepareform>
            <paypal_prepare_line_items>
                <observers>
                    <oshop_extrafee_paypal_prepare>
                        <class>oshop_extrafee/observer</class>
                        <method>paypalPrepareLineItems</method>
                    </oshop_extrafee_paypal_prepare>
                </observers>
            </paypal_prepare_line_items>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <oshop_extrafee>
                    <file>oshop_extrafee.xml</file>
                </oshop_extrafee>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <oshop_extrafee>
                    <file>oshop_extrafee.xml</file>
                </oshop_extrafee>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <extra_fee_settings>
            <extra_fee_rule>
                <active>1</active>
                <label>Extra Fee</label>
            </extra_fee_rule>
        </extra_fee_settings>
    </default>
</config>